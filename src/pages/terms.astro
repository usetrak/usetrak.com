---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/global/Navigation.astro";
import Terms from "../components/infopages/Terms.astro";
import Footer from "../components/global/Footer.astro";
import { AstroSeo } from "@astrolib/seo";
---

<!--
Use AstroSeo in all the pages you want different Seo than the index page
-->
<AstroSeo
  title="Terms and conditions"
  description="Terms and conditions for Trak."
  canonical="http://usetrak.com/terms"
  openGraph={{
    url: "http://usetrak.com",
    title: "Terms and conditions",
    description: "Terms and conditions for Trak.",
    images: [
      {
        url: "http://usetrak.com/opengraph/social-og.jpeg",
        width: 1200,
        height: 630,
        alt: "Trak",
        type: "image/jpeg",
      },
      {
        url: "http://usetrak.com/opengraph/twitter-og.jpeg",
        width: 4096,
        height: 4096,
        alt: "Trak",
        type: "image/jpeg",
      },
      { url: "http://usetrak.com/opengraph/social-og.jpeg" },
      { url: "http://usetrak.com/opengraph/twitter-og.jpeg" },
    ],
    site_name: "Trak",
  }}
  twitter={{
    handle: "@usetrakcom",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <Navigation />
  <Terms />
  <Footer />
</BaseLayout>
