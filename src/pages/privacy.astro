---
import BaseLayout from "../layouts/BaseLayout.astro";
import Navigation from "../components/global/Navigation.astro";
import Privacy from "../components/infopages/Privacy.astro";
import Footer from "../components/global/Footer.astro";

import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Privacy"
  description="All you need to know about our privacy management."
  canonical="http://usetrak.com/privacy"
  openGraph={{
    url: "http://usetrak.com/privacy",
    title: "Privacy",
    description: "All you need to know about our privacy management.",
    images: [
      {
        url: "http://usetrak.com/opengraph/social-og.jpeg",
        width: 1200,
        height: 630,
        alt: "trak",
        type: "image/jpeg",
      },
      {
        url: "http://usetrak.com/opengraph/twitter-og.jpeg",
        width: 4096,
        height: 4096,
        alt: "trak",
        type: "image/jpeg",
      },
      { url: "http://usetrak.com/opengraph/social-og.jpeg" },
      { url: "http://usetrak.com/opengraph/twitter-og.jpeg" },
    ],
    site_name: "Trak",
  }}
  twitter={{
    handle: "@usetrakcom",
    site: "@site",
    cardType: "summary_large_image",
  }}
/>
<BaseLayout>
  <Navigation />
  <Privacy />
  <Footer />
</BaseLayout>
